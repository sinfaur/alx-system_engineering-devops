#!/bin/bash

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modify the hosts file to set localhost to 127.0.0.2 and facebook.com to 8.8.8.8
sudo sed -i 's/localhost/127.0.0.2/g' /etc/hosts
sudo sed -i 's/facebook.com/8.8.8.8/g' /etc/hosts

# Restart networking to apply the changes
sudo /etc/init.d/networking restart

# Output success message
echo "Hosts file has been modified. Localhost resolves to 127.0.0.2 and facebook.com resolves to 8.8.8.8."

# Revert the changes (optional - uncomment the following lines if needed)
# sudo cp /etc/hosts.bak /etc/hosts
# sudo /etc/init.d/networking restart
# echo "Reverted hosts file to its original state."

